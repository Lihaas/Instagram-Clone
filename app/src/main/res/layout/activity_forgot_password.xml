<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPassword"
    android:background="@drawable/lpp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_weight=".4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </LinearLayout>

        <LinearLayout
            android:layout_weight=".9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textAlignment="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Enter Your Instagram username or the email address or phone number linked to your account"/>
            <EditText
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/shape"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:hint="Email address or phone number"
                android:layout_marginTop="15dp"
                android:textSize="17sp"
                android:paddingLeft="10dp"
               android:id="@+id/txtForgot" />
            <Button
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/button"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="40dp"
                android:text="NEXT"
               android:id="@+id/bNext"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/rrr"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>





        </LinearLayout>


<RelativeLayout
    android:layout_weight=".7"
    android:layout_width="match_parent"
    android:layout_height="0dp">




    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_buttonss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>









</RelativeLayout>









    </LinearLayout>






</RelativeLayout>